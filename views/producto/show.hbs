<!DOCTYPE html>
<html>
    <div id="box">
        <br><br>
        <head>
        <title>Detalle de Producto</title>
    </head>
    <body>
        <div class="container">
            <h3><a href="/productos">Lista de Productos</a></h3>
            <h1>Detalle de Producto</h1>
            <table id="table">
                <tbody>
                    <tr>
                        <td><b>Nombre:</b></td>
                        <td>{{ producto.nombre }}</td>
                    </tr>
                    <tr>
                        <td><b>Marcas:</b></td>
                        <td>{{ producto.marca }}</td>
                    </tr>
                    <tr>
                        <td><b>Stock:</b></td>
                        <td>{{ producto.stock }}</td>
                    </tr>
                    <tr>
                        <td><b>Provedor:</b></td>
                        <td>{{ producto.provedor }}</td>
                    </tr>
                </tbody>
            </table>
            <h3><a href="/productos/edit/{{ producto._id }}">EDIT</a></h3>
            <form action="/productos/delete/{{ producto._id }}" method="post">
                <button type="submit" id="eliminar">DELETE</button>
            </form>
        </div>
    </body>
    <br><br>
    </div>
</html>
