<!DOCTYPE html>
<html>
    <div id="box">
        <br><br>
        <head>
        <title>Editar Empleado</title>
    </head>
    <body>
        <div class="container" id="div">
            <h3><a href="/empleados">Lista de Empleados</a></h3>
            <h1>Editar Empleado</h1>
            <form action="/empleados/update/{{ empleado._id }}" method="post">
                <table>
                    <tbody>
                        <tr>
                            <td>Nombre</td>
                            <td><input type="text" name="nombre" value="{{ empleado.nombre }}" /></td>
                        </tr>
                        <tr>
                            <td>Apellido</td>
                            <td><input type="text" name="apellido" value="{{ empleado.apellido }}" /></td>
                        </tr>
                        <tr>
                            <td>DNI</td>
                            <td><input type="text" name="dni" value="{{ empleado.dni }}" /></td>
                        </tr>
                        <tr>
                            <td>Celular</td>
                            <td><input type="text" name="celular" value="{{ empleado.celular }}" /></td>
                        </tr>
                        <tr>
                            <td>Email</td>
                            <td><input type="text" name="email" value="{{ empleado.email }}" /></td>
                        </tr>
                        <tr>
                            <td>Direccion</td>
                            <td><input type="text" name="direccion" value="{{ empleado.direccion }}" /></td>
                        </tr>
                        <tr>
                            <td colspan="2"><button type="submit" id="editar">Editar</button></td>
                        </tr>
                    </tbody>
                </table>
            </form>
        </div>
    </body>
    <br><br>
    </div>
</html>
