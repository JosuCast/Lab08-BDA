<h1>{{title}}</h1>

<div id="box">
    <p id="p"><a href="/">Atras</a></p>
    <br><br>
    <h1> Empleados</h1>
    <p >
        <div class="container">
            <h3><a href="/empleados/create">Crear Empleado</a></h3>
            <h1>Lista de Empleados</h1>
            {{#if empleados }}
                <table class="table table-hover" id="table1">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Dni</th>
                            <th>Celular</th>
                            <th>Email</th>
                            <th>Direccion</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{# each empleados }}
                        <tr>
                            <td><a href="/empleados/show/{{ _id }}">{{ nombre }}</a></td>
                            <td>{{ apellido }}</td>
                            <td>{{ dni }}</td>
                            <td>{{ celular }}</td>
                            <td>{{ email }}</td>
                            <td>{{ direccion }}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            {{~^~}}
                <div>Empleados no encontrados.</div>
            {{/if}}
        </div>
    </p>
    <br><br>
</div>